<div class="row">
  <h2>商品詳細</h2>
    <div class="row">
      <div class="col-md-5 col-md-offset-2">
        <p><%= flash[:notice] %></p>
        <%= attachment_image_tag @product, :image, size: "300x300", format: 'jpg' %>
      </div>
      <div class="col-md-4">
        <label><%= @product.title %></label><br>
        <label><%= @product.artist.artist %></label>
        <p>レーベル｜<%= @product.label.label %></p>
        <p>ジャンル｜<%= @product.genre.genre %></p>
        <% if product.stock == 0 %>
          <p>売り切れ</p>
        <% else %>
          <p>在庫あり</p>
        <% end %>
        <p>価格(税込)|￥<%= @product.price %></p>
      </div>
    </div>
    <div class="col-md-5 col-md-offset-2">
      <%= attachment_image_tag @product, :image, size: "300x300", format: 'jpg' %>
    </div>
    <div class="col-md-4">
      <label><%= @product.title %></label><br>
      <label><%= @product.artist.artist %></label>
      <p>レーベル｜<%= @product.label.label %></p>
      <p>ジャンル｜<%= @product.genre.genre %></p>
      <% if @product.stock > 0 %>
        <p>在庫あり</p>
      <% else %>
        <p>売り切れ</p>
      <% end %>
      <p>価格(税込)|￥<%= @product.price %></p>
    </div>
</div>

<div class="row">
  <div class="col-md-5 col-md-offset-2">
    <h4>収録曲</h4>
      <% @disks.each do |disk| %>
        <p><label>ディスクNo.</label><%= disk.disk %></p>
        <ul>
          <% disk.songs.each do |song| %>
            <li><%= song.song_order %>.   <%= song.song_title %></li>
          <% end %>
        </ul>
      <% end %>
  </div>
</div>
<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= form_for(@cart) do |f| %>
      <%= f.hidden_field :quantity, value: 1 %> <!-- モデルにquantityを保存 -->
      <%= f.hidden_field :product_id, value: @product.id %> <!-- モデルにproduct_idを保存 -->
      <%= f.submit "カートに入れる", class: "btn btn-warning btn-lg btn-block" %>
    <% end %>

  </div>
</div>
<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= link_to "商品一覧へ", products_path(@product), class: "btn btn-default btn-lg btn-block" %>
  </div>
</div>
