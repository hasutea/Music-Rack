<div class="row">
  <h2>商品詳細</h2>
  <div class="col-md-5 col-md-offset-1">
    <%= attachment_image_tag @product, :image, size: "300x300", format: 'jpg' %>
  </div>
  <div class="col-md-4">
    <label><%= @product.title %></label><br>
    <label><%= @product.artist.artist %></label>
    <p><%= @product.label.label %></p>
    <p>ジャンル｜<%= @product.genre.genre %></p>
    <% if @product.stock > 0 %>
      <p>販売中</p>
    <% else %>
      <p>売り切れ</p>
    <% end %>
    <p>価格(税込)|￥<%= @product.price %></p>
  </div>
</div>
<div class="row">
  <h2>収録曲</h2>
  <div class="col-md-5 col-md-offset-1">
    <% @disks.each do |disk| %>
      <p><%= disk.disk %></p>
      <ul>
        <% disk.songs.each do |song| %>
          <li><%= song.song_order %>.<%= song.song_title %></li>
        <% end %>
      </ul>
    <% end %>
</div>
<div class="row">
  <div class="col-md-offset-5">
    <%= link_to "戻る", products_path(@product), class: "btn btn-default btn-lg" %>
  </div>
</div>