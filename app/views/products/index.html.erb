<div class="row">
  <div class="col-md-4 col-md-offset-1">
    <p><%= flash[:notice] %></p>
  </div>
</div>
<%= render 'layouts/search' %>
<h2>Lineup</h2>
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">

        <% @results.each do |product| %>
        <div class="col-md-3">
          <div class="col-md-12">
            <section class="">
              <%= attachment_image_tag product, :image, size: "250x200", format: 'png', fallback: "noimage.png"  %>
              <h4 class=""><%= link_to product.title, product_path(product.id) %></h4>
              <p class=""><%= product.artist.artist %></p>
              <p class="">価格(税込)｜￥<%= product.price %></p>
              <% if product.stock == 0 %>
                <p>売り切れ</p>
              <% else %>
                <p>在庫あり</p>
              <% end %>
            </section>
          </div>
        </div>
        <% end %>

        <div class="row">
          <div class="col-md-12">
            <div class="col-md-4">
            </div>
            <div class="col-md-5">
              <%= paginate @results, class: "paginate" %>
            </div>
            <div class="col-md-3">
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>

