<div class="body">
  <div class="container">
    <div class="row">

      <div class="col-xs-4">
        <h3 class="title">ジャンル新規登録</h3>

          <% if @genre.errors.any? %>
            <div id="error_explanation">
              <% @genre.errors.count %>
              <% @genre.errors.full_messages.each do |message| %>
                <p><%= message %></p>
              <% end %>
            </div>
          <% end %>

          <div class="form">
            <%= form_with model: @genre, url: admins_genre_index_path, local: true do |f| %>

              <%= f.text_field :genre, autofocus: true, class: "form-control", placeholder: "新規で登録するジャンルを入力" %>

              <%= f.submit "新規登録", class: "btn btn-success btn-lg btn-block" %>
            <% end %>
          </div>
        </div>

        <div class="col-xs-8">
          <h4>ジャンル一覧</h4>

            <table class="table table-hover" table-inverse">
              <thead>
                <tr>
                  <th>登録No.</th>
                  <th>ジャンル名</th>
                </tr>
              </thead>

              <tbody>
                <% @genres.each do |genre| %>
                  <tr>
                    <td><%= genre.id %></td>
                    <td><%= genre.genre %></td>
                    <td><%= link_to "削除", admins_genre_path(genre.id), class: "btn btn-danger btn-xs", method: :delete, data:{ confirm: "本当に削除しますか？" } %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
        </div>

    </div>
  </div>
</div>