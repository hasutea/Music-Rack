<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">


<h1>管理者登録ページ</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "off", placeholder: "例：abcdefg@mail.com",class:"form-control" %>
  </div>


  <div class="form-group">
    <%= f.label :パスワード %>
    <%= f.password_field :password, autocomplete: "off", placeholder: "半角英数字8〜32文字",class:"form-control" %>
  </div>


  <div class="form-group">
    <%= f.label :パスワード確認 %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder:"半角英数字8〜32文字",class:"form-control" %>
  </div>


  <div class="actions">
    <%= f.submit "管理者の登録をする",class:"btn btn-warning col-md-4 col-md-offset-4" %>
  </div>
<% end %>

  <div class="row">
    <div class="col-md-7">
<%= render "admins/shared/links" %>
    </div>
  </div>

    </div>
  </div>
</div>