<div class="body">
  <div class="container">
    <div class="row">
      <div class="col-xs-4">
        <h3 class="title">アーティスト登録</h3>

          <% if @artist.errors.any? %>
            <div id="error_explanation">
              <% @artist.errors.count %>
              <% @artist.errors.full_messages.each do |message| %>
                <p><%= message %></p>
              <% end %>
            </div>
          <% end %>

        <div class="form">
          <%= form_with model: @artist, url: admins_artist_index_path, local: true do |f| %>

            <%= f.text_field :artist, autofocus: true, class: "form-control", placeholder: "新規で登録するアーティスト名を入力" %>

            <%= f.submit "新規登録", class: "btn btn-success btn-lg btn-block" %>
          <% end %>
        </div>
      </div>

      <div class="col-xs-6 col-md-offset-1">
        <table class="table table-hover" table-inverse">
          <thead>
            <tr>
              <th>登録No.</th>
              <th>アーティスト名</th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <% @artists.each do |artist| %>
              <tr>
                <td><%= artist.id %></td>
                <td><%= artist.artist %></td>
                <td><%= link_to "削除", admins_artist_path(artist.id), class: "btn btn-danger btn-xs", method: :delete, data:{ confirm: "本当に削除しますか？" } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <div class="row">
        <div class="col-md-offset-4">
          <%= paginate @artists, class: "paginate" %>
        </div>
      </div>

    </div>
  </div>
</div>