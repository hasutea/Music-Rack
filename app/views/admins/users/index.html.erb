<div class="container">
	<div class="row">
		<div class ="col-md-4">

          <div class="">
          	<h3>ユーザー一覧</h3>
          </div>

		</div>

		<div class="col-md-4">

		</div>
	</div>

	<div class="row">
		<div class="col-md-12">

		  <table class="table">
		  	<thead>
		  		<tr>
		  			<th>ID</th>
		  			<th>名前（性・名）</th>
		  			<th>名前（カナ性・カナ名）</th>
		  			<th>メールアドレス</th>
		  		</tr>
		  	</thead>

		<% @users.each do |user| %>


		  	<tbody>
		  		<tr>
		  			<td><%= link_to admins_user_path(user.id) do %>
		  			    <%= user.id %>
		  			    <% end %>
		  			</td>

		  			<td><span><%= user.last_name %></span><span><%= user.first_name %></span></td>

		  			<td><span><%= user.kana_last_name %></span><span><%= user.kana_first_name %></span></td>

		  			<td><span><%= user.email %></span></td>
		  		</tr>
		  	</tbody>

		<% end %>
		  </table>
		</div>
	</div>

	<div class="row">
          <div class="col-md-12">
            <div class="col-md-4">
            </div>
           <div class="col-md-5">
              <%= paginate @users, class: "paginate" %>
           </div>
            <div class="col-md-3">
            </div>
          </div>
  </div>

</div>