<div class="container">
  <div class="row">
    <h1>商品登録</h1>

    <div class="form">
      <%= form_for(@product, url: admins_products_path) do |f| %>

        <div class="col-md-4 col-md-offset-2">
          <div class="row">

            <div class="form-group">
              <label for="control-label">シングル/アルバム名</label>
              <input type="text" class="form-control" name="single_album">
            </div>

            <div class="form-group">
              <p>
                <%= f.attachment_field :image, class: "btn btn-info btn-sm" %>
              </p>
            </div>

            <div class="form-group">
              <label for="control-label">アーティスト名</label>
              @artists = Artist.all<%= select :artist, :artist, @artists.map{|t| [t.artist, t.id]} %>
            </div>

            <div class="form-group">
              <label for="control-label">レーベル名</label>
              @labels = Label.all<%= select :label, :label, @labels.map{|t| [t.label, t.id]} %>
            </div>

            <div class="form-group">
              <label for="control-label">ジャンル</label>
              @genres = Genre.all<%= select :genre, :genre, @genres.map{|t| [t.genre, t.id]} %>
            </div>

        <div class="row">
          <div class="col-md-4 col-md-offset-4">
            <%= f.submit "新規登録", class: "btn btn-success btn-lg btn-block" %>
          </div>
        </div>

      <% end %>
    </div>
  </div>
</div>