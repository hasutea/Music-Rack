<div class="container">
  <div class="row">
    <h1>商品登録</h1>

    <div class="form">
      <%= form_for(@product, url: new_admins_product_path) do |f| %>

        <div class="col-md-4 col-md-offset-2">
          <div class="row">

            <div class="form-group">
              <label for="control-label">シングル/アルバム名</label>
              <input type="text" class="form-control" name="single_album">
            </div>

            <div class="form-group">
              <label for="control-label">ジャケット写真</label>
              <p>
                <%= f.attachment_field :image, class: "btn btn-info btn-sm" %>
              </p>
            </div>

            <div class="form-group">
              <label for="control-label">アーティスト名</label>
              <%= select_tag :artist, options_from_collection_for_select(Artist.all,:id,:artist), include_blank: true, class: "js-searchable form-control" %>

              <input type="text" class="form-control" name="artist" placeholder="選択肢にない場合は、直接入力して下さい">
            </div>

            <div class="form-group">
              <label for="control-label">レーベル名</label>
              <%= select_tag :label, options_from_collection_for_select(Label.all,:id,:label), include_blank: true, class: "js-searchable form-control" %>
              <input type="text" class="form-control" name="label" placeholder="選択肢にない場合は、直接入力して下さい">
            </div>

            <div class="form-group">
              <label for="control-label">ジャンル</label>
              <%= select_tag :genre, options_from_collection_for_select(Genre.all,:id,:genre), include_blank: true, class: "js-searchable form-control" %>
              <input type="text" class="form-control" name="genre" placeholder="選択肢にない場合は、直接入力して下さい">
            </div>

            <div class="form-group">
              <label for="control-label">在庫数</label>
              <select class="form-control" name="quantity">
                <option>0</option>
                <option>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
                <option>5</option>
              </select>
            </div>

            <div class="form-group">
              <label for="control-label">価格(税別)</label>
              <div class="form-group row">
                <div class="col-md-1">
                  <label>¥</label>
                </div>
                <div class="col-md-11">
                  <input type="text" class="form-control" name="price" data-format="number">
                </div>
              </div>
            </div>

            <div class="form-group">
              <label for="control-label">ステータス</label>
              <select class="form-control" name="status">
                <option value="selling">販売中</option>
                <option value="stop_sellng">販売停止中</option>
              </select>
            </div>
          </div>
        </div>


        <div class="row">
          <div class="col-md-8 col-md-offset-2">
            <label>シングル/アルバム内の曲名</label>
              <div class="row">
                <table class="table table-bordered p2146-2-table table-hover">
                  <thead>
                    <tr>
                      <th>ディスク</th>
                      <th>曲名</th>
                      <th>曲順</th>
                      <th>追加/削除</th>
                    </tr>
                  </thead>

                  <tbody class="p2146-2-tbody">
                    <tr>
                        <td>
                          <select class="form-control" name="disk">
                            <option>ディスク1</option>
                            <option>ディスク2</option>
                            <option>ディスク3</option>
                            <option>ディスク4</option>
                            <option>ディスク5</option>
                            <option>ディスク6</option>
                            <option>ディスク7</option>
                            <option>ディスク8</option>
                            <option>ディスク9</option>
                            <option>ディスク10</option>
                          </select>
                        </td>
                        <td>
                          <input type="text" class="form-control p2146-2-tbody" name="song">
                        </td>
                        <td>
                          <select class="form-control p2146-2-tbody" name="song_order">
                            <option>1</option>
                            <option>2</option>
                            <option>3</option>
                            <option>4</option>
                            <option>5</option>
                            <option>6</option>
                            <option>7</option>
                            <option>8</option>
                            <option>9</option>
                            <option>10</option>
                            <option>11</option>
                            <option>12</option>
                            <option>13</option>
                            <option>14</option>
                            <option>15</option>
                            <option>16</option>
                            <option>17</option>
                            <option>18</option>
                            <option>19</option>
                            <option>20</option>
                            <option>21</option>
                            <option>22</option>
                            <option>23</option>
                            <option>24</option>
                            <option>25</option>
                            <option>26</option>
                            <option>27</option>
                            <option>28</option>
                            <option>29</option>
                            <option>30</option>
                          </select>
                        </td>
                        <td>
                          <input value="+" type="button" class="add btn btn-info btn-sm"/>
                          <input value="-" type="button" class="remove btn btn-danger btn-sm"/>
                        </td>
                      </tr>
                  </tbody>
                </table>
              </div>
          </div>
        </div>

        <div class="row">
          <div class="col-md-4 col-md-offset-4">
            <%= f.submit "新規登録", class: "btn btn-success btn-lg btn-block" %>
          </div>
        </div>

      <% end %>
    </div>
  </div>
</div>