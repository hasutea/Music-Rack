<div class="container">
  <div class="row">
    <h1>商品編集</h1>

    <div class="form-group">
      <div class="col-md-4 col-md-offset-2">
        <img src="cdjacket1.png" alt="no image">
        <p>
          <button type="button" class="btn btn-info btn-sm">画像選択</button>
        </p>
      </div>

      <div class="col-md-4">
        <div class="row">

          <div class="form-group">
            <label for="control-label">シングル/アルバム名</label>
            <input type="text" class="form-control" name="single_album">
          </div>

          <div class="form-group">
            <label for="control-label">アーティスト名</label>
            <%= select_tag :artist, options_from_collection_for_select(Artist.all,:id,:artist), include_blank: true, class: "js-searchable form-control" %>

            <input type="text" class="form-control" name="artist" placeholder="選択肢にない場合は、直接入力して下さい">
          </div>

          <div class="form-group">
            <label for="control-label">レーベル名</label>
            <%= select_tag :label, options_from_collection_for_select(Label.all,:id,:label), include_blank: true, class: "js-searchable form-control" %>
            <input type="text" class="form-control" name="label" placeholder="選択肢にない場合は、直接入力して下さい">
          </div>
          <div class="form-group">
            <label for="control-label">ジャンル</label>
            <%= select_tag :genre, options_from_collection_for_select(Genre.all,:id,:genre), include_blank: true, class: "js-searchable form-control" %>
            <input type="text" class="form-control" name="genre" placeholder="選択肢にない場合は、直接入力して下さい">
          </div>

          <div class="form-group">
            <label for="control-label">在庫数</label>
            <%= f.text_field :stock, class: "form-control" %>
          </div>

          <div class="form-group">
            <label for="control-label">価格(税別)</label>
            <div class="form-group row">
              <div class="col-md-1">
                <label>¥</label>
              </div>
              <div class="col-md-11">
                <%= f.text_field :price, class: "form-control" %>
              </div>
          </div>
          <div class="form-group">
            <label for="control-label">ステータス</label>
            <%= f.select :status, [["販売中", "販売中"], ["販売停止中", "販売停止中"]], class: "form-control" %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <label>シングル/アルバム内の曲名</label>

        <div class="row">
              <table class="table table-bordered">
                <tr>
                  <th>ディスク</th>
                  <th>曲名</th>
                  <th>曲順</th>
                </tr>
                <tr>
                  <td>ディスク1</td>
                  <td>ハレノヒ</td>
                  <td>1</td>
                </tr>
                <tr>
                  <td>ディスク1</td>
                  <td>マリーゴールド</td>
                  <td>2</td>
                </tr>
              </table>

            <button type="button" class="btn btn-info btn-sm">記入欄を追加</button>
          </div>
        </div>
    </div>
  </div>

    <div class="row">
      <div class="col-md-3 col-md-offset-3">
        <button type="button" class="btn btn-success btn-lg btn-block">更新</button>
      </div>
      <div class="col-md-3">
        <button type="button" class="btn btn-danger btn-lg btn-block">削除</button>
      </div>
    <% end %>
  </div>
</div>