<div class="nested-fields well well-compact">
  <div class="form-group">
    <label for="control-label">ディスクNo.</label>
    <%= f.text_field :disk, class: "form-control" %>
    <%= link_to_remove_association "ディスクを削除", f, {class: "btn btn-danger btn-xs", role: "button"} %>
  </div>

  <div class="songs">
    <%= f.fields_for :songs do |s| %>
      <%= render "song_fields", :f => s %>
    <% end %>
    <div class="links">
      <%= link_to_add_association "曲を追加", f, :songs, {class: "btn btn-info btn-xs", role: "button"} %>
    </div>
  </div>
</div>