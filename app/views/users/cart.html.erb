<div class="container">
  <div class="col-md-10 col-md-offset-1">
    <h3>ショッピングカート</h3>
    <div class="row">
      <div class="col-md-4 col-md-offset-1">
        <p><%= flash[:notice] %></p>
      </div>
    </div>
    <% if @carts.present? %>
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>シングル/アルバム名</th>
              <th>ジャケット画像</th>
              <th>アーティスト名</th>
              <th>数量</th>
              <th>価格(税込)</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @carts.each do |cart| %>
              <tr>
                <td><%= cart.product.title %></td>
                <td><%= attachment_image_tag cart.product, :image, :fill, 50, 50, format: 'png', fallback: "noimage.png"  %></td>
                <td><%= cart.product.artist.artist %></td>
                <td>
                  <%= form_for(cart) do |f| %>
                    <%= f.number_field :quantity, class: "form-control" %>
                    <%= f.submit "更新", class: "btn btn-success btn-xs" %>
                  <% end %>
                </td>
                <td>￥<%= cart.product.price*cart.quantity %></td>
                <td>
                  <%= link_to "削除", cart_path(cart), method: :delete, class: "btn btn-danger btn-xs", data:{ confirm: "本当に削除しますか？" } %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="row">
        <div class="col-md-3 col-md-offset-8">
            <p>合計金額（税込）￥
              <% sum = 0 %>
              <% @carts.each do |cart| %>
                <% sum += cart.product.price*cart.quantity %>
              <% end %>
              <%= sum  %>
            </p>
            <%= link_to "購入手続きへ進む", new_payment_path, class: "btn btn-warning btn-lg btn-block" %>
            <%= link_to "買い物を続ける", products_path, class: "btn btn-primary btn-lg btn-block" %>
        </div>
      </div>
    <% else %>
      <div class="row">
        <div class="col-md-4 col-md-offset-1">
          <p> カートの中身はありません。</p>
        </div>
        <div class="row">
          <div class="col-md-4 col-md-offset-4">
            <%= link_to "商品を探す", products_path(@product), class: "btn btn-primary btn-lg btn-block" %>
          </div>
        </div>

      </div>
    <% end %>
  </div>
</div>