<div class="row">
  <div class="col-md-5 col-md-offset-1">
    <%= form_for(@user) do |f| %>
      <div class="row">
        <div class="form-group">
          <label>■名前（姓・名）</label>
          <div class="form-inline">
            <%= f.text_field :last_name, class: "form-control", :placeholder => "例：山田" %>
            <%= f.text_field :first_name, class: "form-control", :placeholder => "例：太郎" %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="form-group">
          <label>■名前（カナ姓・カナ名）</label>
          <div class="form-inline">
            <%= f.text_field :kana_last_name, class: "form-control", :placeholder => "例：ヤマダ" %>
            <%= f.text_field :kana_first_name, class: "form-control", :placeholder => "例：タロウ" %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="form-group">
          <label>■郵便番号　※ハイフン不要</label>
          <%= f.text_field :postal_code, class: "form-control", :placeholder => "例：1111111" %>
        </div>
      </div>
      <div class="row">
        <div class="form-group">
          <label>■住所</label>
          <%= f.text_field :address, class: "form-control", :placeholder => "例：例：東京都千代田区大手町2-11" %>
        </div>
      </div>
      <div class="row">
        <div class="form-group">
          <label>■電話番号　※ハイフン不要</label>
          <%= f.text_field :telephone, class: "form-control", :placeholder => "例：000000000" %>
        </div>
      </div>
      <div class="row">
        <div class="form-group">
          <label>■Email</label>
          <%= f.text_field :user_email, class: "form-control", :placeholder => "例：johndoe@mail.com" %>
        </div>
      </div>
      <div class="row">
        <div class="form-group">
          <label>■Password</label>
          <%= f.text_field :user_password, class: "form-control", :placeholder => "例：半角英数字8~32文字" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="col-md-offset-4 col-md-2">
    <%= link_to "戻る", user_path(current_user.id), class: "btn btn-default btn-lg" %>
  </div>
  <div class="col-md-offset-1 col-md-2">
    <%= f.submit "保存", class: "btn btn-warning btn-lg" %>
  </div>
</div>