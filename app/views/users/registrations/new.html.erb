<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">



<h1>新規登録</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">

  <div class="row">
    <div class="col-md-12">

    <%= f.label :名前（性・名） %><br />
  <div class="row">
    <div class="col-md-4">
    <%= f.text_field :last_name, autofocus: true, autocomplete: "名前(性・名)", placeholder:"例：山田",class:"form-control" %>
    </div>


    <div class="col-md-4">
    <%= f.text_field :first_name, autofocus: true, placeholder:"太郎",class:"form-control" %>
    </div>
  </div>

    </div>
  </div>

  </div>



  <div class="form-group">

  <div class="row">
    <div class="col-md-12">

    <%= f.label :名前（カナ性・カナ名） %><br />
  <div class="row">
    <div class="col-md-4">
    <%= f.text_field :kana_last_name, autofocus: true, autocomplete: "名前(カナ性・カナ名)", placeholder:"例：ヤマダ",class:"form-control" %>
    </div>

    <div class="col-md-4">
    <%= f.text_field :kana_first_name, autofocus: true, placeholder:"タロウ",class:"form-control" %>
    </div>
  </div>

    </div>
  </div>

  </div>


<%= f.fields_for :addresses do |f| %>

  <div class="form-group">
  <div class="row">
    <div class="col-md-12">
    <%= f.label :郵便番号 %><br />
  <div class="row">
    <div class="col-md-3">
    <%=f.text_field :postal_code, placeholder:"例：3218364",class:"form-control" %>
    </div>
  </div>

    </div>
  </div>

  </div>


  <div class="row">
    <div class="col-md-10">
    <%= f.label :住所 %><br />
    <%= f.text_field :address, placeholder:"例：東京都千代田区大手町2-11",class:"form-control" %>
  </div>
    </div>

<% end %>



　<div class="form-group">
    <%= f.label :電話番号 %><br />
  <div class="row">
    <div class="col-md-3">
    <%= f.text_field :telephone, autofocus: true, autocomplete: "電話番号", placeholder:"例：08012345678",class:"form-control" %>
    </div>
  </div>


  </div>

  <div class="form-group">
  <div class="row">
    <div class="col-md-9">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "メールアドレス", placeholder:"例：abcdefg@mail.com",class:"form-control" %>
    </div>
  </div>
  </div>

  <div class="form-group">
  <div class="row">
    <div class="col-md-9">
    <%= f.label :パスワード %>
    <%= f.password_field :password, autocomplete: "パスワード", placeholder:"半角英数字8〜32文字",class:"form-control" %>
    </div>
  </div>
  </div>

  <div class="form-group">
  <div class="row">
    <div class="col-md-9">
    <%= f.label :パスワード確認 %><br />
    <%= f.password_field :password_confirmation, autocomplete: "パスワード確認", placeholder:"半角英数字8〜32文字",class:"form-control" %>
    </div>
  </div>
  </div>

  <div class="actions">
    <%= f.submit "新規登録",class:"btn btn-warning col-md-4 col-md-offset-4" %>
  </div>
<% end %>

<div class="row">
  <div class="col-md-8">
<%= render "users/shared/links" %>
  </div>
</div>

    </div>
  </div>
</div>
