<!DOCTYPE html>
<html>
  <head>
    <title>Music Rack</title>

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css'  %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <!--     機能追加後削除 -->
    <nav class="navbar navbar-default">
      <div class="container-fluid"> <!-- 流動レイアウト -->
        <div class="row">
          <div class="col-md-12">

            <div class="navbar-header">
              <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navmenu">
              </button>
              <a class="navbar-brand" href="#">
                Music Rack
              </a>
            </div>

            <div class="collapse navbar-collapse" id="navmenu">
              <div class="nav navbar-nav">
                <p class="navbar-text navbar-left"> ユーザー </p>
              </div>

              <ul class="nav navbar-nav navbar-right">

                <% if admin_signed_in? %>
                  <li><%= link_to "商品一覧", '#' %></li>
                  <li><%= link_to "商品登録", '#' %></li>
                  <li><%= link_to "ユーザー一覧", '#' %></li>
                  <li><%= link_to "管理者登録", new_admin_registration_path %></li>
                  <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete %></li>
                <% end %>

              </ul>
            </div>
          </div>
        </div>
      </div>
    </nav>


    <div class="container">
      <%= yield %>
    </div>

    <%= render 'layouts/footer' %>

  </body>
</html>