<div class="container">
  <div class="table-responsive">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>ID</th>
          <th>画像</th>
          <th>シングル・アルバム名</th>
          <th>アーティスト名</th>
          <th>価格（税別）</th>
          <th>在庫数</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @results.each do |product| %>
          <tr>
            <td><%= product.id %></td>
            <td><%= attachment_image_tag product, :image, :fill, 50, 50, format: 'png', fallback: "noimage.png"  %></td>
            <td><%= product.title %></td>
            <td><%= product.artist %></td>
            <td>¥<%= product.price %></td>
            <td><%= product.stock %></td>
            <td><%= product.status %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
